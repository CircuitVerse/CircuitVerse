<div class="col-12 col-sm-12 col-md-4 col-lg-4 footer-column">
  <div class="footer-links-section">
    <div class="footer-links-grid">
      <div class="footer-links-column">
        <% left_column_links.each do |link| %>
          <%= link_to link[:url], target: link[:target], class: "footer-link-item" do %>
            <h6 class="footer-link-title"><%= t(link[:text]) %></h6>
          <% end %>
        <% end %>
      </div>
      <div class="footer-links-column">
        <% right_column_links.each do |link| %>
          <%= link_to link[:url], target: link[:target], class: "footer-link-item" do %>
            <h6 class="footer-link-title"><%= t(link[:text]) %></h6>
          <% end %>
        <% end %>
        <% if forum_enabled? %>
          <%= link_to simple_discussion_path, class: "footer-link-item" do %>
            <h6 class="footer-link-title"><%= t("layout.footer.link_to_forum") %></h6>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
