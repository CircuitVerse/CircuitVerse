<div class="footer-empty-div"></div>
<div class="container-fluid footer-container-fluid">
  <div class="container footer-container">
    <div class="row footer-main-row">
      <!-- Logo and Social Section -->
      <div class="col-12 col-sm-12 col-md-3 col-lg-3 footer-column">
        <div class="footer-brand-section">
          <div class="footer-logo-wrapper">
            <a href="/" class="footer-logo-link">
              <%= helpers.image_tag("CircuitVerse.png", class: "footer-logo", alt: "CircuitVerse Logo") %>
            </a>
          </div>
          <div class="footer-social-section">
            <p class="footer-social-icon-text">
              <%= t("layout.footer.social_icon_text") %>
            </p>
            <%= render(SocialLinksComponent.new) %>
          </div>
        </div>
      </div>

      <!-- Links Section -->
      <%= render(FooterLinksComponent.new(@current_user)) %>

      <!-- Sponsors Section -->
      <div class="col-12 col-sm-12 col-md-5 col-lg-5 footer-column">
        <div class="footer-sponsors-section">
          <div class="footer-sponsors-grid">
            <div class="footer-sponsor-item">
              <small class="footer-sponsor-label">
                <%= t("layout.footer.sponsor_logo_text.incubated_from") %>
              </small>
              <a href="http://zense.co.in/" class="footer-sponsor-link" rel="noopener" target="_blank">
                <%= helpers.image_tag("footer/zense.png", class: "footer-sponsor-logo", alt: "Zense Logo") %>
              </a>
            </div>

            <div class="footer-sponsor-item">
              <small class="footer-sponsor-label">
                <%= t("layout.footer.sponsor_logo_text.infrastructure_sponsor") %>
              </small>
              <a href="https://fossunited.org/" class="footer-sponsor-link" rel="noopener" target="_blank">
                <%= helpers.image_tag("footer/fossunited.png", class: "footer-sponsor-logo", alt: "FOSS United Logo") %>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Copyright Section -->
    <div class="row footer-copyright-row">
      <div class="col-12 footer-copyright-section">
        <p class="footer-copyright-text">
          <%= t("layout.footer.copyright_text", time_current_year: current_year) %>
        </p>
      </div>
    </div>
  </div>
</div>
