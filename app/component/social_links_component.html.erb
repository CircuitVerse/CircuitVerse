<div class="footer-social-icons-container">
  <% social_links.each do |link| %>
    <%= link_to link[:url], class: "footer-social-link", target: "_blank", data: { tooltip: link[:name] }, aria: { label: link[:name] } do %>
      <%= helpers.image_tag(link[:logo], class: "footer-social-icon", alt: "#{link[:name].capitalize} Logo") %>
    <% end %>
  <% end %>
</div>
