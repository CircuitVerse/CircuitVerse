<table role="presentation" cellpadding="0" cellspacing="0" border="0" width="100%" style="background-color:#ffffff;font-family:Arial,sans-serif;">
  <tr>
    <td align="center">
      <table role="presentation" cellpadding="0" cellspacing="0" border="0" width="100%" style="max-width:600px;background-color:#ffffff;border-radius:8px;box-shadow:0 4px 6px rgba(0,0,0,0.1);">
        <tr>
          <td style="padding:30px;text-align:center;">

            <!-- Heading -->
            <h2 style="color:#333333;font-size:28px;font-weight:700;margin:0 0 20px 0;">
              <%= t('circuitverse.user_mailer.welcome_email.heading', name: @user&.name.present? ? ", #{@user.name}" : "") %>
            </h2>

            <!-- Intro -->
            <p style="color:#666666;font-size:18px;line-height:1.5;margin:20px 0;max-width:500px;display:inline-block;">
              <%= t('circuitverse.user_mailer.welcome_email.intro') %>
            </p>

            <!-- Launch Button -->
            <table role="presentation" cellpadding="0" cellspacing="0" border="0" align="center" style="margin:20px auto 30px auto;">
              <tr>
                <td align="center">
                  <a href="https://circuitverse.org/simulator"
                     style="background-color:#42b883;border-radius:4px;display:block;padding:15px 30px;font-size:16px;font-weight:600;color:#ffffff;text-decoration:none;text-align:center;">
                    <%= t('circuitverse.user_mailer.welcome_email.launch_button') %>
                  </a>
                </td>
              </tr>
            </table>

            <!-- Showcase Cards -->
            <table role="presentation" cellpadding="0" cellspacing="0" border="0" width="100%" style="margin:30px 0;">

              <!-- Features -->
              <tr>
                <td style="padding:10px;">
                  <table role="presentation" cellpadding="0" cellspacing="0" border="0" width="100%" style="border:1px solid #e0e0e0;border-radius:8px;">
                    <tr>
                      <td align="center" style="padding:20px;">
                        <div style="background-color:#dff5ec;border-radius:50%;width:80px;height:80px;margin:0 auto 20px;"></div>
                        <h3 style="color:#333333;font-size:20px;font-weight:600;margin:0 0 15px 0;">
                          <%= t('circuitverse.user_mailer.welcome_email.features_heading') %>
                        </h3>
                        <p style="color:#666666;font-size:16px;line-height:1.5;margin:0 0 20px 0;">
                          <%= t('circuitverse.user_mailer.welcome_email.features_text') %>
                        </p>
                        <a href="https://circuitverse.org/#home-features-section" style="color:#42b883;font-weight:600;text-decoration:none;">Know More →</a>
                      </td>
                    </tr>
                  </table>
                </td>
              </tr>

              <!-- Design -->
              <tr>
                <td style="padding:10px;">
                  <table role="presentation" cellpadding="0" cellspacing="0" border="0" width="100%" style="border:1px solid #e0e0e0;border-radius:8px;">
                    <tr>
                      <td align="center" style="padding:20px;">
                        <div style="background-color:#dff5ec;border-radius:50%;width:80px;height:80px;margin:0 auto 20px;"></div>
                        <h3 style="color:#333333;font-size:20px;font-weight:600;margin:0 0 15px 0;">
                          <%= t('circuitverse.user_mailer.welcome_email.design_heading') %>
                        </h3>
                        <p style="color:#666666;font-size:16px;line-height:1.5;margin:0 0 20px 0;">
                          <%= t('circuitverse.user_mailer.welcome_email.design_text') %>
                        </p>
                        <a href="https://docs.circuitverse.org/" style="color:#42b883;font-weight:600;text-decoration:none;">Know More →</a>
                      </td>
                    </tr>
                  </table>
                </td>
              </tr>

              <!-- Learn -->
              <tr>
                <td style="padding:10px;">
                  <table role="presentation" cellpadding="0" cellspacing="0" border="0" width="100%" style="border:1px solid #e0e0e0;border-radius:8px;">
                    <tr>
                      <td align="center" style="padding:20px;">
                        <div style="background-color:#dff5ec;border-radius:50%;width:80px;height:80px;margin:0 auto 20px;"></div>
                        <h3 style="color:#333333;font-size:20px;font-weight:600;margin:0 0 15px 0;">
                          <%= t('circuitverse.user_mailer.welcome_email.learn_heading') %>
                        </h3>
                        <p style="color:#666666;font-size:16px;line-height:1.5;margin:0 0 20px 0;">
                          <%= t('circuitverse.user_mailer.welcome_email.learn_text') %>
                        </p>
                        <a href="https://learn.circuitverse.org/" style="color:#42b883;font-weight:600;text-decoration:none;">Know More →</a>
                      </td>
                    </tr>
                  </table>
                </td>
              </tr>
            </table>

          </td>
        </tr>
      </table>
    </td>
  </tr>
</table>
