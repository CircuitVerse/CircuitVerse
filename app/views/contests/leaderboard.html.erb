<%# Page <title> ------------------------------------------------------ %>
<% content_for :title, "#{@contest.display_name} · Leaderboard" %>

<div class="container my-4">

  <!-- Title bar in a subtle card -->
  <div class="card shadow-sm mb-4">
    <div class="card-body d-flex justify-content-between align-items-center py-2">
      <h3 class="mb-0"><%= @contest.display_name %> — Leaderboard</h3>
      <span class="badge bg-success fs-6">
        <%= pluralize @ranked_submissions.length, "entry" %>
      </span>
    </div>
  </div>

  <!-- Responsive, striped table -->
  <div class="table-responsive">
    <table class="table table-striped table-hover align-middle mb-0">
      <thead class="table-light sticky-top">
        <tr>
          <th class="text-center" style="width:5rem;">#</th>
          <th>Project</th>
          <th>Author</th>
          <th class="text-center" style="width:8rem;">Votes</th>
        </tr>
      </thead>
      <tbody>
        <% @ranked_submissions.each_with_index do |s, idx| %>
          <tr class="<%= leaderboard_row_class(idx) %>">
            <td class="text-center fw-semibold">
              <%= medal_for(idx) %>
            </td>
            <td>
              <%= link_to s.project.name,
                          user_project_path(s.user, s.project),
                          class: "text-decoration-none" %>
            </td>
            <td>
              <%= link_to s.user.name,
                          user_path(s.user),
                          class: "text-decoration-none" %>
            </td>
            <td class="text-center fw-semibold"><%= s.votes_count %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <%= link_to "← Back to contest",
              contest_page_path(@contest),
              class: "btn primary-button home-simulator-button" %>
</div>
