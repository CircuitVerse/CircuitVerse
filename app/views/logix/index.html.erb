        </div>
    </div>
  <br>
  <br>
  <div class="container">
    <% if Rails.env.production? %>
    <h5 class=""><a href="/examples" style="color:black;">Featured Examples</a></h5>
    <div class="row">
      <% featured_ids=[247,248,252,67] %>
      <% featured_ids.each do |project_id| %>
          <% project = Project.find(project_id) %>
          <div class="col-sm-3">
            <div class="card text-center " style="margin-top: 2rem">
              <div class="card-header card-title">
               <a href="<%= user_project_path(project.author_id,project) %>"><%=project.name %></a>
              </div>
              <a href="<%= user_project_path(project.author_id,project) %>" ><img class="card-img-top " src="<%= project.image_preview.url %>" alt="<%= project.name%>" ></a>
            </div>
          </div>
      <% end %>
    </div>
    <br>
    <% end %>

    <h5 class=""><a href="/featured_circuits" style="color: black;">Editor Picks</a></h5>
    <div class="row">
      <% @featured_circuits.each do |project| %>
          <div class="col-sm-3">
            <div class="card text-center " style="margin-top: 2rem">
              <div class="card-header card-title">
               <a href="<%= user_project_path(project.author_id, project) %>"><%=project.name %></a>
              </div>
              <a href="<%= user_project_path(project.author_id, project) %>" ><img class="card-img-top " src="<%= project.image_preview.url %>" alt="<%= project.name%>" ></a>
            </div>
          </div>
      <% end %>
    </div>
    <br>

    <h5 class="" id="recent">Recent Circuits</h5>
