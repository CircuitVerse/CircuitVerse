<div id="lmscredentialsModal-<%=assignment.id%>" class="modal fade" role="dialog">
  <div class="modal-dialog primary-modal-dialog">
    <div class="modal-content">
      <div class="modal-header primary-modal-header">
        <h4 class="modal-title"><%=assignment.name%></h4>
        <button type="button" class="close" data-dismiss="modal">&times;</button>
      </div>
      <div class="modal-body">
        <h5>LMS Credentials</h5>
        <br>
        <div>
          <strong>Tool Url:</strong>
          <p id ="toolurl" class ="groups-showlmscredentialsmodal-links-text"><%= URI.join request.original_url, '/lti/launch'%></p>
          <a class ="btn primary-button groups-copy-lms-credentials-button" onclick="return copyToClipboard('#toolurl');">
            <%= image_tag("SVGs/createCopy.svg", alt: "Create Copy") %>
          </a>
        </div>
        <div>
          <strong>Consumer Key:</strong> 
          <p id ="consumerkey" class ="groups-showlmscredentialsmodal-links-text"><%=assignment.lti_consumer_key%></p>
          <a class ="btn primary-button groups-copy-lms-credentials-button" onclick="return copyToClipboard('#consumerkey');">
            <%= image_tag("SVGs/createCopy.svg", alt: "Create Copy") %>
          </a>
        </div>
        <div>
          <strong>Shared Secret:</strong> 
          <p id ="sharedsecret" class ="groups-showlmscredentialsmodal-links-text"><%=assignment.lti_shared_secret%></p>
          <a class ="btn primary-button groups-copy-lms-credentials-button" onclick="return copyToClipboard('#sharedsecret');">
            <%= image_tag("SVGs/createCopy.svg", alt: "Create Copy") %>
          </a>
        </div>
        <br>
        <div>
          <a href="https://www.example.com" target="_blank">Learn how to integrate CircuitVerse assignments with any LMS</a>
        </div>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript">
  function copyToClipboard(element) {
    var $temp = $("<input>");
    $("body").append($temp);
    $temp.val($(element).text()).select();
    document.execCommand("copy");
    $temp.remove();
  }
</script>