      </div>
      <div class="modal-body">
        <%= t("groups.demote_mentor_confirmation") %>
        <%= t("groups.add_mentor_description_html") %>
      </div>
      <div class="modal-footer">
        <%# Form action is set dynamically by JavaScript when modal opens %>
        <%# The action MUST point to /group_members/:id for GroupMembersController#update %>
        <%= form_with url: "#", method: :patch, id: "demote-member-form", local: true, data: { turbo: false } do |f| %>
          <%= hidden_field_tag "group_member[mentor]", "false" %>
          <%= f.submit t("groups.make_member"), class: "btn primary-button", id: "groups-member-demote-button" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
