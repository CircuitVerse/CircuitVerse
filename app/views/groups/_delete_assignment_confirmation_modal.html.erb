<div id="deleteassignmentModal" class="modal fade" role="dialog">
  <div class="modal-dialog primary-modal-dialog">
    <div class="modal-content">
      <div class="modal-header secondary-modal-header">
        <h4 class="modal-title">Delete</h4>
        <button type="button" class="close" data-dismiss="modal">&times;</button>
      </div>
      <div class="modal-body">
        <p>Are you sure you want to delete this assignment?</p>
      </div>
      <div class="modal-footer">
        <%= link_to '#', method: :delete, class: "btn primary-delete-button", id: "groups-assignment-delete-button" do %>
          Delete
        <% end %>
      </div>
    </div>
  </div>
</div>
