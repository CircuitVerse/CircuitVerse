<div id="deletecommentModal" class="modal fade" role="dialog" aria-label="Delete Comment Modal">
  <div class="modal-dialog primary-modal-dialog">
    <div class="modal-content">
      <div class="modal-header secondary-modal-header">
        <h4 class="modal-title"><%= t("delete") %></h4>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="close"></button>
      </div>
      <div class="modal-body">
        <p><%= t("commontator.comment.actions.confirm_delete") %></p>
      </div>
      <div class="modal-footer">
        <%= link_to commontator.comment_delete_path(comment),
                    method: :delete,
                    remote: true,
                    class: "btn btn-danger",
                    data: { "bs-dismiss": "modal" },
                    id: "projects-comment-delete-button" do %>
          <%= t("delete") %>
        <% end %>
      </div>
    </div>
  </div>
</div>
