<%= link_to simple_discussion.forum_thread_path(@forum_thread), class: "btn btn-outline-secondary" do %>
  <%= icon("fas", "arrow-left") %>&nbsp;&nbsp;
  <%= t('back_to_thread') %>
<% end %>
<div class="block-inline mb-1 mt-3">
  <h4 style="display:inline"><%= icon "fas", "thumb-tack", class: "text-muted" if @forum_thread.pinned? %> <%= @forum_thread.title %></h4>
  <% if @forum_thread.solved? %>
    <div class="px-3 solved-tag" style="display:inline">
      <%= icon "far", "check-circle" %>
      Solved
    </div>
  <% else %>
    <div class="px-3 unsolved-tag" style="display:inline">
      <%= icon "far", "question-circle" %>
      Open
    </div>
  <% end %>
</div>

<div class="d-flex mb-4">
  <div class="thread-details-custom">
    Created by <span><%= @forum_thread.user.name %></span> â€¢ <span><%= time_ago_in_words(@forum_thread.created_at) %></span> ago
  </div>
  <div class="category-chip mx-3" style="color: <%= @forum_thread.forum_category.color %>; border-color: <%= @forum_thread.forum_category.color %>">
    <%= @forum_thread.forum_category.name %>
  </div>
</div>
<%= content_tag :div, id: dom_id(@forum_post), class: '{forum_post_classes(@forum_post)}p-0 border-0' do %>
  <div class="form-user-details">
    <div class="user-details d-flex flex-row">
      <div class="user-avatar mr-2"><img src="<%= gravatar_url_for(@forum_post.user.email, size: 30) %>" alt="avatar of user"></div>
      <div class="details d-flex flex-column justify-content-between">
        <p class="title"><%= @forum_post.user.name %> <%= forum_user_badge(@forum_post.user) %></p>
        <p class="subtitle"><%= t('on ') %>  <%= @forum_post.created_at.strftime("%b %d, %Y") %></p>
      </div>
    </div>
  </div>

  <div class="card-body">
    <%= render "form" %>
  </div>
<% end %>
