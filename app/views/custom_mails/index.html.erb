<div class="container">
  <div class="row center-row">
    <div class="col-xs col-sm col-md col-lg">
      <% if @mails.count!=0 %>
        <h1 class="submain-heading"><%= t("custom_mails.custom_emails_heading") %></h1> <br>
        <%= link_to t("custom_mails.new_custom_mail"), new_custom_mail_path, class: "btn primary-button custom-mail-primary-button" %>
        <table class="custom-mail-table">
          <thead class="custom-mail-thead">
            <tr>
              <th><%= t("custom_mails.subject") %></th>
              <th><%= t("custom_mails.email_send_status") %></th>
              <th colspan="2"></th>
            </tr>
          </thead>
          <tbody>
            <% @mails.each do |mail| %>
              <tr>
                <td><%= mail.subject %></td>
                <td><%= mail.sent ? t("custom_mails.yes") : t("custom_mails.no") %></td>
                <td><%= link_to t("show"), mail, class: "anchor-text" %></td>
                <td><%= link_to t("edit"), edit_custom_mail_url(mail), class: "anchor-text" %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% else %>
        <h1 class="submain-heading"><%= t("custom_mails.no_custom_emails_yet") %></h1>
      <% end %>
    </div>
  </div>
</div>
