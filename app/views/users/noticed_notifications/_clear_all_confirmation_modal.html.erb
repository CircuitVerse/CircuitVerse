<div id="clear_all_modal_confirmation" class="modal fade" role="dialog">
  <div class="modal-dialog primary-modal-dialog">
    <div class="modal-content">
      <div class="modal-header secondary-modal-header">
        <h4 class="modal-title">Clear All</h4>
        <button type="button" class="close" data-dismiss="modal">&times;</button>
      </div>
      <div class="modal-body">
        <p><%= t("users.notifications.clear_all_confirmation") %></p>
      </div>
      <div class="modal-footer">
        <%= link_to t("delete"), clear_all_notification_url(current_user), method: :delete, class: "btn primary-delete-button" %>
      </div>
    </div>
  </div>
</div>
