<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 center-image">
      <%= image_tag "SVGs/login.svg", alt: "Login Logo", :class => "users-image" %>
      <h5 class="users-image-text">Welcome back to the Digital Circuit Universe!</h5>
    </div>

    <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
      <div class="users-form-container">
        <h2 class="users-heading-main">Forgot your password?</h2>
        <%= form_with(model: resource, as: resource_name, url: password_path(resource_name), method: :post, local: true) do |f| %>
          <%= devise_error_messages! %>
          <div class="field form-group">
            <h6><%= f.label :email %></h6>
            <div class="input-group">
              <%= f.email_field :email, autofocus: true, class:"form-control form-input" %>
            </div>
          </div>
          <div class="field form-group">
            <div class="input-group">
              <%= f.submit "Send password reset link" ,class:"btn primary-button users-primary-button" %>
              <a href="#" class="anchor-text mt-2" data-toggle="modal" data-target="#loginModal">Go to Login Page</a>
            </div>
          </div>
          <div class="field form-group">
            <div class="input-group">
              <span class="users-text">New User?</span>
              <%= link_to "Sign Up", new_registration_path(resource_name) ,class:"anchor-text" %>
            </div>
          </div>
          <%= render "users/shared/links" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
