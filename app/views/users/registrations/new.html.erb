<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 center-block">
      <%= image_tag "SVGs/signup.svg", alt: "signup-logo", :class => "signup-cover center-block" %>
      <h5>Get yourself registered to start away with saving circuits, building groups and much more!</h5>
    </div>

    <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
      <div class="form-container">
        <h1 class="pb-3">Sign Up</h1>
        <%= form_with(model: resource, as: resource_name, url: registration_path(resource_name), local: true) do |f| %>
        <%= devise_error_messages! %>
        <div class="field form-group">
          <%= f.label :name, class:"label-text" %>
          <div class="input-group">
            <%= f.text_field :name, autofocus: true ,class:"form-control custom-input", placeholder: 'Name' %>
          </div>
        </div>
        <div class="field form-group">
          <%= f.label :email, class:"label-text" %>
          <div class="input-group">
            <%= f.email_field :email, autofocus: true,class:"form-control custom-input", placeholder: 'Email' %>
          </div>
        </div>
        <div class="field form-group">
          <%= f.label :password, class:"label-text" %>
          <% if @minimum_password_length %>
          <span>(Minimum <%= @minimum_password_length %> characters)</span>
          <% end %>
          <div class="input-group">
            <%= f.password_field :password, autocomplete: "off", class:"form-control custom-input", id:"signup-psw", placeholder: 'Password' %>
            <div class="input-group-addon" onclick="toggleSignupPassword()">
              <i class="fa fa-eye-slash password-icon" aria-hidden="true" id="toggle-psw-icon"></i>
            </div>
          </div>
        </div>
        <div class="field form-group">
          <div class="input-group mt-4">
            <%= f.submit "Sign up" ,class:"btn btn-about custom-submit" %>
            <span class="help-text"> Already Registered? </span>
            <%= link_to "Log In", new_session_path(resource_name) ,class:"link-text pl-2" %>
          </div>
        </div>
        <div class="field form-group mt-3">
          <%= render "users/shared/links" %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<script src="/js/signup.js"></script>
