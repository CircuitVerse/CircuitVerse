<script type="module">
  import Fuse from 'https://cdn.jsdelivr.net/npm/fuse.js@6.4.3/dist/fuse.esm.js'

  const projectTitles = Array.from($('.users-card-name p')); // getting all the titles of the projects in element form
  const projectTitlesStrings = projectTitles.map(projectTitle => projectTitle.textContent.toLowerCase());// getting the title names in strings

  $('.users-circuits-search').keyup(() => { // listening for every keystroke on input
    const searchQuery = $('.users-circuits-search').val().toLowerCase().trim(); // getting the searh query and converting it to lower case for easy compare

    const fuse = new Fuse(projectTitlesStrings) // instanciating fuse
    const resultsAsObject = fuse.search(searchQuery) // searching with the search query and storing the search results
    const resultsStrings = resultsAsObject.map((object) => object['item'])

    let showIndex = [];
    let hideIndex = [];

    // indexes to show
    resultsStrings.forEach(result => {
      if(projectTitlesStrings.includes(result)) {
        showIndex.push(projectTitlesStrings.indexOf(result));
      }
    })

    // indexes to hide
    for(let i = 0; i < projectTitles.length; i++) {
      if(!(showIndex.includes(i))) {
        hideIndex.push(i);
      }
    }
    
    // showing as per index
    showIndex.forEach((index) => projectTitles[index].parentElement.parentElement.parentElement.parentElement.style.display = "block");

    // hiding as per index
    hideIndex.forEach((index) => projectTitles[index].parentElement.parentElement.parentElement.parentElement.style.display = "none");

    if(searchQuery.length === 0) { // if searchQuery is empty then display all the elements
      projectTitles.forEach(title => title.parentElement.parentElement.parentElement.parentElement.style.display = "block");
    }

  })
</script>

<script type="text/javascript">
  $(function() {
    $('#favourite-circuits-div').hide();
    $('#collaborator-circuits-div').hide();
    var circuitTabs = ['favourite-circuits', 'my-circuits', 'collaborator-circuits'];
    $('.users-circuits-tab').on('click', function (e) {
      if(!$(this).hasClass("active")) {
        var id = this.id;
        $(this).addClass("active");
        circuitTabs.forEach(element => {
          var div = `#${element}-div`;
          if(element == id) {
            $(div).css("display", "flex");
          }
          else {
            $('#' + element).removeClass("active");
            $(div).css("display", "none");
          }
        });
      }});
    $('.previewButton').on('click', function (e) {
        e.preventDefault()
        let project = $(e.currentTarget).data('currentproject').id;
        $("#projectPreview").attr("src","/simulator/" + project.toString() );
        $("#projectModal").tab('show');
    });
    $("#projectModal").on("show.bs.modal", function(e) {
        let projectSlug = $(e.relatedTarget).data('currentproject').slug;
        let projectId = $(e.relatedTarget).data('currentproject').id;
        var id = projectSlug ? projectSlug : projectId;
        $(e.currentTarget).find('#project-launch-button').attr("href",
        "/simulator/edit/" + id);
        $(e.currentTarget).find('#project-fork-button').attr("href",
        "/projects/create_fork/" + projectId.toString());
        $(e.currentTarget).find('#project-more-button').attr("href",
        "/users/" + <%= @user.id.to_s %> + "/projects/" + id);
    });
  });
</script>
