<div class="container">
  <div class="row row-group">
    <div class="col-xs col-sm col-md col-lg">
      <h2 class="heading-group">GROUPS</h2>
      <%= link_to '+ Make New Group', new_group_path, class: "btn-group" %>
      <% if notice %>
          <p id="notice" class="alert alert-danger"><%= notice %></p>
      <% end %>
    </div>
  </div>
  <br>
  <% if @groups_mentored.present? %>
    <h4 style="font-weight: 600">GROUPS YOU MENTOR: </h4>
    <div class="row" style="margin:auto">
      <% @groups_mentored.each do |group| %>
        <div class="card mentor-card-group">
          <div style="font-size: 30px; font-weight: bold"><%= group.name %></div>
          <div style="font-size: 18px"> Total Members: <%= group.group_member_count %></div>
          <div class="btn-mentor-group">
            <%= link_to 'View', group, class: "btn btn-view" %>
            <%= link_to 'Edit', edit_group_path(group), class: "btn btn-edit" %>
            <%= link_to 'Delete', group, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-delete" %>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
  <br>
  <% if @user.groups.count!=0 %>
    <h4 style="font-weight: 600">GROUPS YOU'RE IN: </h4>
    <div class="row" style="margin:auto">
      <% @groups_mentored.each do |group| %>
        <div class="card in-card-group">
          <div class="in-card-name-member">
            <div style="font-size: 30px; font-weight: bold"><%= group.name %></div>
            <div style="font-size: 18px"> Total Members: <%= group.group_member_count %></div>
          </div>
          <%= link_to 'View', group, class: "in-card-view" %>
        </div>
      <% end %>
    </div>
  <% end %>
</div>

