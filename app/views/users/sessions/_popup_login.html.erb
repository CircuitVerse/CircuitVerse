<div id="loginModal" class="modal fade" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content users-modal-content">
      <div class="row users-popup-row">
        <div class="col-xs-12 col-sm-12 col-md-5 col-lg-5 users-popup-image-background">
          <%= image_tag ("SVGs/login.svg"), alt: "Signin Image", class: "users-popup-image" %>
        </div>
        <div class="col-xs-12 col-sm-12 col-md-7 col-lg-7 users-popup-details">
          <button type="button" class=" mr-3 mt-3 close" data-dismiss="modal">&times;</button>
          <div class="form-container">
            <h3>Log In</h3> <br>
            <%= form_with(model: resource, as: resource_name, url: session_path(resource_name), html: {id: "loginForm"}, remote: true) do |f| %>
              <div class="alert error-message" id="usersLoginError"></div>
              <div class="field form-group">
                <h6><%= f.label :email %></h6>
                <div class="input-group">
                  <%= f.email_field :email, autofocus: true, class:"form-control form-input" %>
                </div>
              </div>
              <div class="field form-group">
                <h6><%= f.label :password %></h6>
                <div class="input-group form-input">
                  <%= f.password_field :password, autocomplete: "off" ,class:"form-control users-login-password-input" %>
                  <div class="input-group-addon ml-3 mt-2" onclick="toggleLoginPassword()">
                    <i class="far fa-eye-slash password-icon" aria-hidden="true" id="login-toggle-icon"></i>
                  </div>
                </div>
              </div>
              <div class="field form-group">
                <div class="input-group">
                  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
                    <%= link_to "Forgot password?", new_password_path(resource_name), class:"anchor-text users-forgot-password-text" %>
                  <% end -%>
                </div>
              </div>
              <% if devise_mapping.rememberable? -%>
                <div class="form-group newproject-checkbox">
                  <label class="primary-checkpoint-container users-primary-checkpoint"><h6>Remember Me</h6>
                    <%= f.check_box :remember_me %>
                    <div class="primary-checkpoint"></div>
                  </label>
                </div>
              <% end -%>
              <div class="field form-group">
                <div class="input-group">
                  <%= f.submit "Log in" ,class:"btn primary-button users-login-primary-button" %>
                  <span class="users-text mt-2 ml-2">New User?</span>
                  <%= link_to "Sign up", "#" ,class:"anchor-text mt-2 users-anchor-text", data: {toggle: "modal", target: "#registerModal", dismiss: "modal"} %>
                </div>
              </div>
              <%= render "users/shared/links" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<script src="/js/togglePassword.js"></script>
