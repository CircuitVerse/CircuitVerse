<nav class="navbar navbar-expand-lg bg-white">
  <a class="navbar-brand" href="/">
    <%= image_tag("CircuitVerse.png", class: "navbar-logo", alt: "CircuitVerse Logo") %>
  </a>
  <button class="navbar-toggler navbar-light" type="button" data-toggle="collapse" data-target="#collapsedNavbar"
  aria-controls="collapsedNavbar" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="collapsedNavbar">
    <ul class="navbar-nav ml-auto navigationBar-item">
      <li class="nav-item px-1 pt-1">
        <div class="row-text navbar-search-icon-container">
          <i class="fa fa-search <%= request.path == '/search' ? 'active' : '' %>" aria-hidden="true"></i>
        </div>
      </li>
      <li class="nav-item px-1">
        <a class="btn rounded-0 navbar-simulator-text" href="/simulator">Simulator</a>
      </li>
      <div class="navbar-nav nav-item dropdown">
        <li class="nav-item px-1 dropdown-toggle-hidden">
          <a class="nav-link dropdown-toggle navbar-item navbar-text" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Getting Started</a>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <a class="dropdown-item" href="https://learn.circuitverse.org/">Learn</a>
            <a class="dropdown-item" href="https://docs.circuitverse.org/">Documentation</a>
          </div>
        </li>
      </div>
      <li class="nav-item px-1">
        <a class="nav-link navbar-text navbar-item <%= request.path == '/features' ? 'active' : '' %>" href="/features">Features</a>
      </li>
      <li class="nav-item px-1">
        <a class="nav-link navbar-text navbar-item <%= request.path == '/teachers' ? 'active' : '' %>" href="/teachers">Teachers</a>
      </li>
      <li class="nav-item px-1">
        <a class="nav-link navbar-text navbar-item <%= request.path == '/about' ? 'active' : '' %>" href="/about">About</a>
      </li>
      <% if user_signed_in? %>
      <div class="navbar-nav nav-item dropdown">
        <li class="nav-item px-1">
          <a class="nav-link navbar-text dropdown-toggle navbar-item" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <div class="navbar-username-truncate"><%= current_user.name %></div>
          </a>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <a class="dropdown-item" href="<%= profile_path(current_user) %>">Profile </a>
            <a class="dropdown-item" href="<%= notifications_path(current_user) %>">Notifications </a>
            <a class="dropdown-item" href="<%= user_path(current_user) %>">My Circuits</a>
            <a class="dropdown-item" href="<%= user_groups_path(current_user) %>">My Groups</a>
            <a class="dropdown-item" href="<%= user_favourites_path(current_user) %>">My Favourites</a>
            <div class="dropdown-divider"></div>
            <a class="dropdown-item" rel="nofollow" data-method="delete" href="<%= destroy_user_session_path %>">Sign Out</a>
          </div>
        </li>
      </div>
      <% else %>
        <li class="nav-item px-1">
          <a class="nav-link navbar-text navbar-item <%= request.path == '/users/sign_in' ? 'active' : '' %>" href="/users/sign_in">Login</a>
        </li>
      <% end %>
    </ul>
  </div>
</nav>
<div class="container-fluid navbar-search-active">
  <%= render "logix_assets/search_bar" %>
</div>

<script type="text/javascript">
  function activeSearchBar(){
    let searchIcon = document.getElementsByClassName("fa-search")[0];
    let searchBar = document.getElementsByClassName("navbar-search-active")[0];
    let burgerButton = document.getElementById("collapsedNavbar");
    if (searchIcon.classList.contains("active")) {
      searchIcon.classList.remove("active");
      searchBar.style.display = "none";
    }
    else {
      searchIcon.classList.add("active");
      searchBar.style.display = "block";
    }
    burgerButton.classList.remove("show");
  }
  let searchIcon = document.getElementsByClassName("fa-search")[0];
  let searchBar = document.getElementsByClassName("navbar-search-active")[0];
  searchIcon.addEventListener("click", activeSearchBar);
  if (window.location.href.includes('search')) {
      searchBar.style.display = "block";
  }
</script>
