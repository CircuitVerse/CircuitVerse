<div id="host-new-contest-modal"
     class="modal fade"
     role="dialog"
     aria-labelledby="hostNewContestModalLabel"
     aria-hidden="true">

  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header d-flex align-items-center">
        <h4 id="hostNewContestModalLabel" class="modal-title flex-grow-1 text-center">
          <%= t("contest.host_new_contest_modal.heading") %>
        </h4>
        <button type="button"
                class="btn-close ms-auto"
                data-bs-dismiss="modal"
                aria-label="<%= t('contest.close') %>"></button>
      </div>

      <%= form_with url: admin_contests_path,
                    method: :post,
                    scope: :contest,
                    data: {turbo: false} do |form| %>

        <div class="modal-body">
          <p><%= t("contest.host_new_contest_modal.description") %></p>
          <%= t("contest.host_new_contest_modal.description_html").html_safe %>
        </div>

        <div class="modal-body">
          <div class="form-group mb-3">
            <%= form.label :name, t("contest.host_new_contest_modal.sub_heading") %>
            <%= form.text_field :name, class: "form-control" %>
          </div>
        </div>

        <div class="modal-footer">
          <%= form.hidden_field :status, value: "live" %>
          <%= form.hidden_field :deadline, value: @default_deadline.strftime("%Y-%m-%dT%H:%M") %>

          <%= form.submit t("contest.host_new_contest_modal.confirm_button"),
                          class: "btn primary-button groups-primary-button" %>
        </div>
      <% end %>

    </div>
  </div>
</div>
