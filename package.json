{
  "name": "CircuitVerse",
  "version": "1.0.0",
  "repository": "git@github.com:CircuitVerse/CircuitVerse.git",
  "license": "MIT",
  "scripts": {
    "test": "jest",
    "build:docs": "jsdoc simulator/src/* -c conf.json -t ./node_modules/better-docs",
    "watch:doc-src": "npx nodemon --exec 'npm run build:docs' --watch simulator/src/",
    "watch:doc-output": "npx livereload out",
    "watch:docs": "npm run watch:doc-output & npm run watch:doc-src",
    "lint": "eslint ./simulator",
    "postinstall": "opencollective-postinstall || true",
    "prepare": "husky .",
    "build": "node esbuild.config.js",
    "build:css": "bun run build:css:compile && bun run build:css:prefix",
    "build:css:compile": "sass ./app/assets/stylesheets/application.bootstrap.scss:./app/assets/builds/application.css --no-source-map --load-path=node_modules",
    "build:css:prefix": "postcss ./app/assets/builds/application.css --use=autoprefixer --output=./app/assets/builds/application.css",
    "watch:css": "nodemon --watch ./app/assets/stylesheets/ --ext scss --exec \"bun run build:css\""
  },
  "devDependencies": {
    "@babel/core": "^7.28.3",
    "@babel/preset-env": "^7.26.7",
    "@commitlint/cli": "^17.5.0",
    "@commitlint/config-conventional": "^17.4.4",
    "@jsdoc/salty": "^0.2.9",
    "@percy/cli": "^1.30.5",
    "canvas": "^2.11.2",
    "chokidar": "^3.6.0",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.31.0",
    "husky": ">=6",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jsdoc": "3.6.10",
    "lint-staged": ">=15.4.2",
    "livereload": "^0.9.3",
    "nodemon": "^3.1.10",
    "playwright": "1.52.0",
    "postcss-flexbugs-fixes": "^5.0.2",
    "postcss-import": "^15.1.0",
    "postcss-preset-env": "^8.4.2",
    "vite": "^5.4.19",
    "vite-plugin-ruby": "^5.1.1"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^7.0.0",
    "@hotwired/stimulus": "^3.2.2",
    "@popperjs/core": "^2.11.8",
    "@tarekraafat/autocomplete.js": "^10.2.9",
    "autoprefixer": "^10.4.21",
    "banana-i18n": "^2.4.0",
    "better-docs": "^2.7.3",
    "bootstrap": "^5.3.7",
    "bootstrap-icons": "^1.13.1",
    "bootstrap-input-spinner": "^3.3.3",
    "canvas2svg": "1.0.16",
    "codemirror": "^5.65.1",
    "dom-to-image": "^2.6.0",
    "dompurify": "^3.2.4",
    "driver.js": "^0.9.8",
    "esbuild": "^0.25.9",
    "esbuild-plugin-sass": "^1.0.1",
    "esbuild-rails": "^1.0.7",
    "esbuild-sass-plugin": "^3.3.1",
    "jquery": "^3.7.1",
    "jquery-resizable-dom": "^0.35.0",
    "jquery-ujs": "^1.2.3",
    "jsdoc-export-default-interop": "^0.3.1",
    "opencollective-postinstall": "^2.0.3",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "sass": "^1.90.0",
    "select2": "^4.1.0-rc.0",
    "stimulus": "^3.2.2",
    "stylelint": "^15.11.0",
    "stylelint-config-standard-scss": "^11.1.0",
    "trumbowyg": "^2.31.0",
    "turbolinks": "^5.2.0"
  },
  "collective": {
    "type": "opencollective",
    "url": "https://opencollective.com/CircuitVerse"
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix",
    "*.rb": "bundle exec rubocop -l -A"
  },
  "browserslist": [
    "defaults"
  ]
}
