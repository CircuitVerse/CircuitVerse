{
  "name": "CircuitVerse",
  "version": "1.0.0",
  "repository": "git@github.com:CircuitVerse/CircuitVerse.git",
  "license": "MIT",
  "scripts": {
    "test": "jest",
    "build:docs": "jsdoc simulator/src/* -c conf.json -t ./node_modules/better-docs",
    "watch:doc-src": "npx nodemon --exec 'npm run build:docs' --watch simulator/src/",
    "watch:doc-output": "npx livereload out",
    "watch:docs": "npm run watch:doc-output & npm run watch:doc-src",
    "lint": "eslint ./simulator",
    "postinstall": "opencollective-postinstall || true",
    "prepare": "husky install",
    "build": "node esbuild.config.js"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.25.4",
    "@commitlint/cli": "^17.5.0",
    "@commitlint/config-conventional": "^17.4.4",
    "canvas": "^2.11.2",
    "chokidar": "^3.6.0",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.30.0",
    "husky": ">=6",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jsdoc": "3.6.10",
    "lint-staged": ">=13",
    "livereload": "^0.9.3",
    "nodemon": "^2.0.21",
    "postcss-flexbugs-fixes": "^5.0.2",
    "postcss-import": "^15.1.0",
    "postcss-preset-env": "^8.4.2",
    "vite": "^5.0.0",
    "vite-plugin-ruby": "^5.1.0"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^6.6.0",
    "@hotwired/stimulus": "^3.2.2",
    "@tarekraafat/autocomplete.js": "^10.2.6",
    "banana-i18n": "^2.3.3",
    "better-docs": "^2.7.3",
    "bootstrap": "^4.6.1",
    "bootstrap-input-spinner": "^3.3.3",
    "canvas2svg": "1.0.16",
    "codemirror": "^5.65.1",
    "dom-to-image": "^2.6.0",
    "dompurify": "^3.1.6",
    "driver.js": "^0.9.8",
    "esbuild": "^0.24.0",
    "esbuild-plugin-sass": "^1.0.1",
    "esbuild-rails": "^1.0.7",
    "jquery": "^3.7.1",
    "jquery-resizable-dom": "^0.35.0",
    "jquery-ujs": "^1.2.3",
    "jsdoc-export-default-interop": "^0.3.1",
    "opencollective-postinstall": "^2.0.3",
    "popper.js": "^1.16.1",
    "sass": "^1.79.3",
    "stimulus": "^3.2.2",
    "stylelint": "^15.11.0",
    "stylelint-config-standard-scss": "^11.1.0",
    "trumbowyg": "^2.28.0",
    "turbolinks": "^5.2.0"
  },
  "collective": {
    "type": "opencollective",
    "url": "https://opencollective.com/CircuitVerse"
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix",
    "*.rb": "bundle exec rubocop -l -A"
  }
}
